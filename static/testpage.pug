extends ./_template

mixin course(course)
  a.lesson-plan(href="/lesson/" + course.id + '/overview' style="background: #" + course.color)
    .lesson-plan-img(style="background-image: url(/resources/" + course.id + "/hero.jpg)")
    h2= course.title
    p= course.description
    p #{course.grade} &nbsp;•&nbsp; #{course.time}

block vars
  - var title = "TROP ICSU Climate Change Education"

block body
  .hero
    .hero-img(style="background-image: url(/images/LOGO-TROP-ICSU.png)")
    .hero-shadow
    .container: .hero-title
      h1 Learn about Climate Change

  .container
    .row
    This is a test page
  +footer()
